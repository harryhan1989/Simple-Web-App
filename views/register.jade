extends layout

block content
    .row
        div(class="col s4")
        div(class="col s4")
            if error
                h5(class="red-text darken-2 center-align") #{error.code} - #{error.message}
            form(action="/auth/register" id="regForm" method="post")
                div(class="input-field col s12")
                    h1(class="center-align") Register
                div(class="input-field col s12")
                    input(id="first_name" type="text" placeholder="First Name" class="validate" name="fname")
                div(class="input-field col s12")
                    input(id="last_name" type="text" placeholder="Last Name" class="validate" name="lname")
                div(class="input-field col s12")
                    input(id="email" type="email" placeholder="Email" class="validate" name="email")
                div(class="input-field col s12")
                    input(id="password" type="password" placeholder="Password" class="validate" name="pass")
                div(class="input-field col s12")
                    input(id="password2" type="password" placeholder="Verify Password" class="validate" name="pass2")
                div(class="input-field col s12")
                    button(class="btn waves-effect waves-light col s12" type="submit" name="action") Register
        div(class="col s4")