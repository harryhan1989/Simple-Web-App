extends layout

block content
    .row
        form(action="./login" method="post")
            div(class="col s4")
            div(class="col s4")
                div(class="input-field col s12")
                    h1(class="center-align") Login
                div(class="input-field col s12")
                    input(id="email" type="email" class="validate" name="email" placeholder="Email")
                div(class="input-field col s12")
                    input(id="password" type="password" class="validate" name="password" placeholder="Password")
                div(class="input-field col s12")
                    button(class="btn waves-effect waves-light col s12" type="submit" name="action") Sign In
                div(class="input-field col s12")
                    a(class="btn waves-effect waves-light col s12" href="/auth/register") Register
            div(class="col s4")